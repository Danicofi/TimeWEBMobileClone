<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/coordinatorLayoutCheck">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lineDate"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        >

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/whiteLigth"/>

        <TextView
            android:id="@+id/textViewLineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FECHA"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutCheck">

<androidx.cardview.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/cardViewCheck"
    android:layout_height="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="11dp"
    android:background="@color/colorGrayLigth"
    app:cardCornerRadius="10dp">



<LinearLayout
    android:id="@+id/linearLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/viewNotDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayLigth"/>

        <View
            android:id="@+id/viewDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayLigth"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageViewHistoryCheck"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/icon_int"
                        android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageViewDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_delete_red2"
                    android:scaleType="centerCrop"
                    android:layout_gravity="bottom|right"
                    android:visibility="gone"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:layout_marginLeft="7dp">

                <TextView
                    android:id="@+id/textViewGeocerca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin geocerca asignada"
                    android:textColor="@color/whiteLigth"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/textViewTipeCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/textViewFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="@color/whiteLigth"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>



            </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewSendCheck"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_check_gray"
        android:scaleType="centerCrop"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"/>


</androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>