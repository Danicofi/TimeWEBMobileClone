<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activitys.MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/frameLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="timeweb-mobile.json"
                android:layout_gravity="center"
                android:layout_marginBottom="120dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona una opcion"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnGoToLogin"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="YA TENGO CUENTA"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/colorOrangeTimeBlackLight"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnGoToRegister"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="REGISTRARME AHORA"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/colorOrangeLite"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terminos y Condiciones de timeWEB"
                android:textSize="12dp"
                android:textColor="@color/colorOrangeTime"
                android:textStyle="bold"
                android:gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="timeWEB|Powered by ACASSI|V 2.0.1"
                android:gravity="center"/>

        </LinearLayout>


    </FrameLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>