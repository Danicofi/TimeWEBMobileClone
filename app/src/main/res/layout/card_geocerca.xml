<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/coordinatorLayoutCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutGeocerca">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/cardViewGeocerca"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:background="@color/colorGrayLigth"
        app:cardCornerRadius="10dp">



    <LinearLayout
        android:id="@+id/linearLayoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/viewGeocerca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrayLigth"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewHistoryCheck"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_geocerca"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center|left">

                    <TextView
                        android:id="@+id/textViewGeoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sin geocerca asignada"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/textViewDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion"
                        android:textColor="@color/whiteLigth"
                        android:textSize="13sp"
                        android:maxLines="1"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>